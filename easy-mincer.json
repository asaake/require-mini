{
  "port": 3000,
  "serverRoot": "/",
  "assets": {
    "contextRoot": "/assets",
    "paths": [
      "bower_components",
      "app/assets/javascripts",
      "app/assets/stylesheets",
      "app/assets/templates",
      "test/assets/javascripts",
      "test/assets/stylesheets",
      "test/assets/templates"
    ],
    "useSourceMaps": true
  },
  "public": {
    "contextRoot": "/",
    "paths": [
      "app/public/javascripts",
      "app/public/stylesheets",
      "app/public/templates"
    ]
  },
  "rewrite": {
    "paths": {
      "/**": "/index.html"
    },
    "ignorePaths": [
      "/assets/**"
    ]
 },
 "log": {
    "debug": false,
    "info": false,
    "warn": true,
    "error": true
  },
 "compile": {
    "paths": ["require-mini.js"]
 }

}